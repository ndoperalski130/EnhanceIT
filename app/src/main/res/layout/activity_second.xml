<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/museosans_300"
        android:text="Email Address"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tietEmailAddress"
        android:layout_width="300sp"
        android:layout_height="30sp"
        android:layout_below="@id/tvEmailAddress"
        android:fontFamily="@font/museosans_300"
        android:background="@color/white"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="40sp" />

    <TextView
        android:id="@+id/tvCreatePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Password"
        android:textColor="@color/white"
        android:fontFamily="@font/museosans_300"
        android:textSize="30dp"
        android:layout_below="@id/tietEmailAddress"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tietPassword"
        android:layout_width="300sp"
        android:layout_height="30sp"
        android:background="@color/white"
        android:inputType="textPassword"
        android:fontFamily="@font/museosans_300"
        android:hint="See criteria below"
        android:layout_below="@id/tvCreatePassword"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="40sp" />

    <TextView
        android:id="@+id/tvRepeatPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat Password"
        android:fontFamily="@font/museosans_300"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_below="@id/tietPassword"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tietRepeatPassword"
        android:layout_width="300sp"
        android:layout_height="30sp"
        android:layout_below="@id/tvRepeatPassword"
        android:fontFamily="@font/museosans_300"
        android:background="@color/white"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tvRequirements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:text="Password should be at least 8 characters long, contain at least 1 number,
at least 1 uppercase letter,
and at least 1 lowercase letter.
You can use special characters"
        android:textAlignment="center"
        android:fontFamily="@font/museosans_300"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_below="@id/tietRepeatPassword"/>

<androidx.appcompat.widget.AppCompatButton
    android:layout_width="wrap_content"
    android:layout_height="60sp"
    android:text="Next"
    android:id="@+id/btnNext"
    android:fontFamily="@font/museosans_300"
    android:textSize="30sp"
    android:background="@drawable/gradient_button_background2x"
    android:enabled="false"
    android:layout_marginTop="20sp"
    android:layout_below="@id/tvRequirements"
    />


</RelativeLayout>